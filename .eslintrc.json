{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended",
        "prettier/standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}
